{
    "manifest_version": 3,
    "name": "Loop & Chill",
    "description": "__MSG_description__",
    "version": "1.0",
    "version_name": "1.0-alpha",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "ui/popup.html"
    },
    "options_page": "ui/options.html",
    "content_scripts": [{
        "all_frames": true,
        "css": [
            "extension-styles.css"
        ],
        "js": [
            "ui/satus.js",
            "extension-core.js",
            "extension-features.js"
        ],
        "matches": [
            "<all_urls>"
        ],
        "run_at": "document_start"
    }],
    "offline_enabled": true,
    "optional_permissions": [
        "downloads"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}